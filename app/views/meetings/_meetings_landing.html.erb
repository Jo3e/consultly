<nav class="bg-white my-4 shadow rounded">
	<ul class="nav nav-pills" id="pills-tab" role="tablist">
		<li class="nav-item">
			<a href="#calendar" class="nav-link active" id="calender-tab" data-toggle="pill" role="tab" aria-controls="calendar" aria-selected="true">
				Calendar
			</a>
		</li>
		<li class="nav-item" role="presentation">
			<a href="#all-meetings" class="nav-link" id="all-meetings-tab" data-toggle="pill" role="tab" aria-controls="all-calendar" aria-selected="true">
				All Meetings
			</a>
		</li>
	</ul>
</nav>

<div class="tab-content" id="pills-tabContent">
	<div class="tab-pane" id="all-meetings" role="tabpanel" aria-labelledby="all-meetings-tab" aria-labelledby="all-meetings-tab">
		<h2>Meetings</h2>

		<% meetings.each do |meeting| %>
			<div class="d-flex justify-content-between">
				<%= link_to meeting.name, meeting, class: 'nav-link' %>
				<%= readable_time(meeting.start_time) %> &ndash;
				<%= readable_time(meeting.end_time) %>
			</div>

			<%= link_to	'Cancel Meeting', meeting, method: :delete, data: {confirm: 'Are you certain? There are no refunds.'}, class: 'nav-link' if admin? %>
		<% end %>
	</div>
	<div class="tab-pane" id="calendar" role="tabpanel" aria-labelledby="calendar-tab" aria-labelledby="calendar-tab">
		<h2>Meeting Calendar</h2>

		<div id="meeting-calendar">
			<%= render 'calendar', meetings: meetings %>
		</div>
	</div>
</div>