<div class="bg-white my-5 p-5 border border-gray rounded">
  <%= form_with(model: meeting, local: true, class: 'meeting-form') do |form| %>
    <% if meeting.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(meeting.errors.count, "error") %> prohibited this meeting from being saved:</h2>

        <ul>
          <% meeting.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <h3 class="mb-4">Meeting information</h3>

    <div class="mb-4">
      <%= form.label :name, class: 'label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="mb-4">
      <%= form.label :start_time %>
      <div class="d-flex text-center justify-content-between">
        <%= form.datetime_select :start_time, {start_day: Date.today, start_year: Date.today.year, minute_step: 20}, {class: 'form-control py-2 px-2 mr-2'} %>
      </div>
    </div>

    <div class="mb-4">
      <%= form.label :end_time %>
      <div class="d-flex text-center justify-content-between">
        <%= form.datetime_select :end_time, {start_day: Date.today, start_year: Date.today.year, minute_step: 20}, {class: 'form-control py-2 px-2 mr-2'} %>
      </div>
    </div>

    <hr class="border">

    <%#= render 'payment_form' %>

    <%= form.submit class: 'btn btn-primary py-3 px-5' %>

  <% end %>
</div>
