<div class="container py-5">
  
  <div class="m-auto justify-content-center auth-width shadow p-4 mb-5 bg-white rounded">

    <h2 class="font-weight-bold my-4">hange your password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, "New password" %>
        <% if @minimum_password_length %>
          <small>(<%= @minimum_password_length %> characters minimum)</small>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm new password" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit "Change my password", class: 'btn btn-sm btn-light border border-primary my-2' %>
      </div>

    <% end %>
    
    <%= render "devise/shared/links" %>

  </div>

</div>